@{
  Layout = "_Layout";
}

@using ToDoList.Models;
@model List<ToDoList.Models.Item>;

<h1>Items</h1>

@if (@Model.Count == 0)
{
  <h3>No items have been added yet!</h3>
}

@foreach (Item item in Model)
{
  <li>@Html.ActionLink($"{item.Description}", "Details", new { id = item.ItemId }) | @Html.ActionLink($"{item.Completed}",
  "Details", new { id = item.ItemId }) | </li>
}

@using (Html.BeginForm())
{
  <p>Search Items</p>
  @Html.TextBox("searchString")
  <input type="submit" value="Search" />
}

<p>@Html.ActionLink("Add new item", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>